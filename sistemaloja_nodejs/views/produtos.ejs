<%- include ('partials/navbar.ejs') %>

<div class="background-image">
    <div class="container">
        <div class="card text-white bg-dark">
            <div class="card-header">
                <h1>Cadastrar produto</h1>
            </div>
    
            <div class="card-body">
                <form action="/produtos/new" method="POST">
                    <label>Produto:</label>
                    <input type="text" name="produto" id="produto" placeholder="Insira o nome do produto" class="form-control" required>
                    
                    <label>Preço:</label>
                    <input type="text" name="preco" id="preco" placeholder="Insira o valor do produto" class="form-control" required>
                    
                    <label>Categoria:</label>
                    <input type="text" name="categoria" id="categoria" placeholder="Insira a categoria do produto" class="form-control" required>
                    <br>
                    <input type="submit" class="btn btn-success" value="Cadastrar">
                </form>
                <hr>
            </div>
        </div>

        <div class="card text-white bg-dark">
            <div class="car-header">
                <h1 class="alinhar">Produtos</h1>
            </div>
            <div class="card-body alinhar">
                <table class="minha-tabela">
                    <thead>
                        <th></th>
                        <th>Produto: </th>
                        <th>Preço: </th>
                        <th>Categoria: </th>
                        <th colspan="2">Ações:</th>
                    </thead>
                    <tbody>
                        <% produtos.forEach(produto => { %>
                            <tr>
                                <td style="width: 40px">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gift" viewBox="0 0 16 16">
                                        <path d="M3 2.5a2.5 2.5 0 0 1 5 0 2.5 2.5 0 0 1 5 0v.006c0 .07 0 .27-.038.494H15a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a1.5 1.5 0 0 1-1.5 1.5h-11A1.5 1.5 0 0 1 1 14.5V7a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h2.038A3 3 0 0 1 3 2.506zm1.068.5H7v-.5a1.5 1.5 0 1 0-3 0c0 .085.002.274.045.43zM9 3h2.932l.023-.07c.043-.156.045-.345.045-.43a1.5 1.5 0 0 0-3 0zM1 4v2h6V4zm8 0v2h6V4zm5 3H9v8h4.5a.5.5 0 0 0 .5-.5zm-7 8V7H2v7.5a.5.5 0 0 0 .5.5z"/>
                                    </svg>
                                </td>
                                <td><%= produto.produto %></td>
                                <td><%= produto.preco %></td>
                                <td><%= produto.categoria %></td>
                                <td><a style="color: orange;" href="/produtos/edit/<%= produto.id %>">Editar</a></td>
                                <td><a style="color: red;" href="/produtos/delete/<%= produto.id %>" onclick="return confirm('Deseja realmente deletar o produto <%= produto.nome %>?')">Deletar</a></td>
                            </tr>
                        <% }) %>
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>